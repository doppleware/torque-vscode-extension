{
  "name": "torque-ai",
  "displayName": "Torque AI",
  "description": "Autonomous identification, root cause analysis and remediation of code and infrastructure issues",
  "version": "0.0.1",
  "publisher": "quali",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.106.0"
  },
  "keywords": [
    "PlaformEngineering",
    "SRE",
    "DevOps"
  ],
  "badges": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/doppleware/torque-vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/doppleware/torque-vscode-extension/issues"
  },
  "homepage": "https://github.com/doppleware/torque-vscode-extension",
  "categories": [
    "Programming Languages",
    "Visualization",
    "Linters",
    "Debuggers"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onUri:quali.torque-ai"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Torque AI",
      "properties": {
        "torque-ai.space": {
          "type": "string",
          "default": null,
          "description": "Default Torque space to use for operations",
          "scope": "resource"
        },
        "torque-ai.activeSpace": {
          "type": "string",
          "default": null,
          "description": "Currently active Torque space for the workspace. If not set, the default space will be used.",
          "scope": "resource"
        }
      }
    },
    "commands": [
      {
        "command": "torque.setup",
        "title": "Configure Torque AI",
        "category": "Torque",
        "icon": "$(gear)"
      },
      {
        "command": "torque.setActiveSpace",
        "title": "Set Active Torque Space",
        "category": "Torque",
        "icon": "$(folder)"
      },
      {
        "command": "torque.setDefaultSpace",
        "title": "Set Default Torque Space",
        "category": "Torque",
        "icon": "$(folder-library)"
      },
      {
        "command": "torque.triggerMcpDiscovery",
        "title": "Refresh MCP Connection",
        "category": "Torque",
        "icon": "$(refresh)"
      },
      {
        "command": "torque.checkMcpHealth",
        "title": "Check MCP Health",
        "category": "Torque",
        "icon": "$(pulse)"
      },
      {
        "command": "torque.checkMcpStatus",
        "title": "Check Torque AI Status",
        "category": "Torque",
        "icon": "$(info)"
      },
      {
        "command": "torque.recreateMcpServer",
        "title": "Recreate MCP Server",
        "category": "Torque",
        "icon": "$(refresh)"
      },
      {
        "command": "torque.testUri",
        "title": "Test URI Handler",
        "category": "Torque",
        "icon": "$(debug)"
      },
      {
        "command": "torque.resetFirstTime",
        "title": "Reset First Time State",
        "category": "Torque",
        "icon": "$(refresh)"
      },
      {
        "command": "torque.createBlueprint",
        "title": "Torque Blueprint",
        "category": "Torque",
        "icon": "$(file-add)"
      },
      {
        "command": "torque.blueprintActions",
        "title": "Blueprint Actions...",
        "category": "Torque",
        "icon": "$(menu)"
      }
    ],
    "menus": {
      "file/newFile": [
        {
          "command": "torque.createBlueprint",
          "group": "file"
        }
      ]
    },
    "mcpServerDefinitionProviders": [
      {
        "id": "torqueMcpProvider",
        "label": "Torque MCP Server Provider"
      }
    ],
    "languageModelTools": [
      {
        "name": "torque_get_environment_details",
        "tags": ["torque", "environment", "infrastructure"],
        "toolReferenceName": "torque_get_environment_details",
        "displayName": "Get Torque Environment Details",
        "modelDescription": "Retrieve detailed information about a specific Torque environment including owner, cost, connections, grains, resources, and available workflows",
        "userDescription": "Get comprehensive details about a Torque environment including all infrastructure resources and automation workflows",
        "canBeReferencedInPrompt": true,
        "icon": "$(cloud)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "space_name": {
              "type": "string",
              "description": "Name of the Torque space"
            },
            "environment_id": {
              "type": "string",
              "description": "ID of the environment to get details for"
            }
          },
          "required": [
            "space_name",
            "environment_id"
          ]
        }
      },
      {
        "name": "get_current_torque_space",
        "tags": ["torque", "space", "configuration"],
        "toolReferenceName": "get_current_torque_space",
        "displayName": "Get Current Torque Space",
        "modelDescription": "Get the name of the currently active Torque space. Returns the active space if set, otherwise returns the default space",
        "userDescription": "Get the currently selected or default Torque space name",
        "canBeReferencedInPrompt": true,
        "icon": "$(folder)",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      }
    ],
    "fileTemplates": [
      {
        "id": "torque.blueprint",
        "label": "Torque Blueprint",
        "description": "Create a new Torque Blueprint YAML file",
        "defaultName": "blueprint.yaml",
        "icon": "$(file-code)",
        "template": "# yaml-language-server: $schema=https://raw.githubusercontent.com/QualiTorque/torque-vs-code-extensions/master/client/schemas/blueprint-spec2-schema.json\nspec_version: 2\ndescription: ''\ninputs:\ngrains:\n"
      }
    ]
  },
  "scripts": {
    "clean": "rimraf ./out",
    "build:dev": "npm run clean && npx jiti esbuild.ts",
    "build:prod": "npm run clean && npx jiti esbuild.ts --production",
    "check-types": "tsc --noEmit",
    "compile:dev": "npm run check-types && npm run build:dev",
    "compile:prod": "npm run check-types && npm run build:prod",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "npx jiti esbuild.ts --watch",
    "watch:tsc": "tsc --noEmit -w",
    "lint": "eslint --cache .",
    "fix:prettier": "prettier --write './**/*.{json,md,ts}'",
    "precommit": "lint-staged",
    "prepare": "husky",
    "vscode:prepublish": "npm run compile:prod",
    "package": "vsce package",
    "test": "vscode-test",
    "pretest": "npm run compile:dev && npm run lint"
  },
  "lint-staged": {
    "*.{json,ts}": [
      "eslint --cache"
    ],
    "*.{json,md,ts}": [
      "prettier --write"
    ]
  },
  "__metadata": {
    "id": "2e214876-5bea-4ee6-8026-222de5313d92",
    "publisherDisplayName": "Quali",
    "publisherId": "caa21fe0-eb8b-43fd-9197-ae8fb8b1b5df",
    "isPreReleaseVersion": false
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "audit-ci": "^7.1.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.1.3",
    "sinon": "^21.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "date-fns": "^4.1.0",
    "express": "^5.2.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "path-to-regexp": "^8.3.0"
  }
}
