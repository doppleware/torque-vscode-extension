{
  "name": "torque-ai",
  "displayName": "Torque AI",
  "description": "Autonomous identification, root cause analysis and remediation of code and infrastructure issues",
  "version": "0.0.1",
  "publisher": "quali",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "keywords": [
    "PlaformEngineering",
    "SRE",
    "DevOps"
  ],
  "badges": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/doppleware/torque-vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/doppleware/torque-vscode-extension/issues"
  },
  "homepage": "https://github.com/doppleware/torque-vscode-extension",
  "categories": [
    "Programming Languages",
    "Visualization",
    "Linters",
    "Debuggers"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onUri:quali.torque-ai"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "torque.setup",
        "title": "Configure Torque AI",
        "category": "Torque",
        "icon": "$(gear)"
      },
      {
        "command": "torque.triggerMcpDiscovery",
        "title": "Refresh MCP Connection",
        "category": "Torque",
        "icon": "$(refresh)"
      },
      {
        "command": "torque.checkMcpHealth",
        "title": "Check MCP Health",
        "category": "Torque",
        "icon": "$(pulse)"
      },
      {
        "command": "torque.checkMcpStatus",
        "title": "Check Torque AI Status",
        "category": "Torque",
        "icon": "$(info)"
      },
      {
        "command": "torque.testUri",
        "title": "Test URI Handler",
        "category": "Torque",
        "icon": "$(debug)"
      },
      {
        "command": "torque.resetFirstTime",
        "title": "Reset First Time State",
        "category": "Torque",
        "icon": "$(refresh)"
      }
    ],
    "mcpServerDefinitionProviders": [
      {
        "id": "torqueMcpProvider",
        "label": "Torque MCP Server Provider"
      }
    ],
    "languageModelTools": [
      {
        "name": "torque_get_environment_details",
        "displayName": "Get Torque Environment Details",
        "modelDescription": "Retrieve detailed information about a specific Torque environment including owner, cost, connections, and configuration",
        "inputSchema": {
          "type": "object",
          "properties": {
            "space_name": {
              "type": "string",
              "description": "Name of the Torque space"
            },
            "environment_id": {
              "type": "string",
              "description": "ID of the environment to get details for"
            }
          },
          "required": [
            "space_name",
            "environment_id"
          ]
        }
      }
    ]
  },
  "scripts": {
    "clean": "rimraf ./out",
    "build:dev": "npm run clean && npx jiti esbuild.ts",
    "build:prod": "npm run clean && npx jiti esbuild.ts --production",
    "check-types": "tsc --noEmit",
    "compile:dev": "npm run check-types && npm run build:dev",
    "compile:prod": "npm run check-types && npm run build:prod",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "npx jiti esbuild.ts --watch",
    "watch:tsc": "tsc --noEmit -w",
    "lint": "eslint --cache .",
    "fix:prettier": "prettier --write './**/*.{json,md,ts}'",
    "precommit": "lint-staged",
    "prepare": "husky",
    "vscode:prepublish": "npm run compile:prod",
    "package": "vsce package",
    "test": "vscode-test",
    "pretest": "npm run compile:dev && npm run lint"
  },
  "lint-staged": {
    "*.{json,ts}": [
      "eslint --cache"
    ],
    "*.{json,md,ts}": [
      "prettier --write"
    ]
  },
  "__metadata": {
    "id": "2e214876-5bea-4ee6-8026-222de5313d92",
    "publisherDisplayName": "Quali",
    "publisherId": "caa21fe0-eb8b-43fd-9197-ae8fb8b1b5df",
    "isPreReleaseVersion": false
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "audit-ci": "^7.1.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.4",
    "mocha": "^11.7.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^21.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.44.1"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "husky": "^9.1.7",
    "path-to-regexp": "^8.3.0"
  }
}
